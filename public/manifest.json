{
  "manifest_version": 3,
  "name": "Intertop Helper",
  "version": "0.1.0",
  "description": "The shoemaker's son always goes barefoot",
  "icons": {
    "16": "icons/icon_16.png",
    "24": "icons/icon_24.png",
    "32": "icons/icon_32.png",
    "64": "icons/icon_64.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.intertop.ua/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ]
}
